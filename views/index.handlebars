<h1>Good Burgers!</h1>

<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Good Burger</button>
</form>
<button class="devour" data-id="{{id}}" data-newsleep="{{devoured}}">
  {{#if devoured}}Yum!{{else}}Eat Me!{{/if}}
</button>


<div class="row">
  <!-- burgers -->
  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <!-- left column -->
    <h1 id="left">To Be Eaten...</h1>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <div class="card">
        {{!-- <img src="./assets/img/burger.png" class="tinyicon burgericon"><img src="./assets/img/eat.png"
          class="tinyicon eaticon" data-id="{{this.id}}"> --}}
        <h2>{{burger_name}}</h2>
      </div>
      {{/unless}}
      {{/each}}
    </ul>
  </div> <!-- left column -->

  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <!-- right column -->
    <h1 id="right">Already Devoured!</h1>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <div class="card">
        {{!-- <img src="./assets/img/burger.png" class="tinyicon burgericon eaten"><img src="./assets/img/waiter.png"
          class="tinyicon waitericon" data-id="{{this.id}}"> --}}
        <h2>{{burger_name}}</h2>
      </div>
      {{/if}}
      {{/each}}
    </ul>
  </div> <!-- right column -->
</div> <!-- burgers row -->